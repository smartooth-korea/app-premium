<!-- 			ON SU.USER_ID = STUD.USER_ID -->
<!-- 		LEFT OUTER JOIN ST_CLASS_INFO SCI -->
<!-- 			ON STUD.CLASS_CODE = SCI.CLASS_CODE -->
